@model Domain.Models.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<p>Are you sure you want to delete this employee?</p>

<div>
    <h4>Employee details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">EmployeeId</dt>
        <dd class="col-sm-10">@Model.EmployeeId</dd>

        <!-- Добавьте другие свойства, если необходимо -->

        <dt class="col-sm-2">FirstName</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">LastName</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">MiddleName</dt>
        <dd class="col-sm-10">@Model.MiddleName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.EmployeeId" method="post">

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>