@model Domain.Models.ViewModels.ProjectViewModel

<h2>Delete Project</h2>

<p>Are you sure you want to delete this project?</p>

<div>
    <h4>Project details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ProjectId</dt>
        <dd class="col-sm-10">@Model.ProjectId</dd>

        <dt class="col-sm-2">ProjectName</dt>
        <dd class="col-sm-10">@Model.ProjectName</dd>

        <dt class="col-sm-2">Customer Company</dt>
        <dd class="col-sm-10">@Model.CustomerCompanyName</dd>

        <dt class="col-sm-2">Executor Company</dt>
        <dd class="col-sm-10">@Model.ExecutorCompanyName</dd>

        <dt class="col-sm-2">Project Manager</dt>
        <dd class="col-sm-10">@Model.ProjectManagerName</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Priority</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProjectId" method="post">

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>