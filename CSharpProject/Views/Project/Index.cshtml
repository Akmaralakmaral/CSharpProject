@model List<Domain.Models.ViewModels.ProjectViewModel>

<h2>Projects</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Customer Company</th>
            <th>Executor Company</th>
            <th>Project Manager</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Priority</th>
            <th>Employees</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
                <tr>
                    <td>@project.ProjectName</td>
                    <td>@project.CustomerCompanyName</td>
                    <td>@project.ExecutorCompanyName</td>
                    <td>@project.ProjectManagerName</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.EndDate.ToShortDateString()</td>
                    <td>@project.Priority</td>
                    <td>@(project.EmployeeNames != null ? string.Join(", ", project.EmployeeNames) : "No data")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@project.ProjectId">Details</a> |
                        <a asp-action="Edit" asp-route-id="@project.ProjectId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@project.ProjectId">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>